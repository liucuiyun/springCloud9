<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yun.cloud9.dao.PaymentDao">

    <insert id="create" parameterType="com.yun.cloud9.entities.Payment" useGeneratedKeys="true" keyProperty="id">
        insert into t_payment (serial) values(#{serial})
    </insert>
    <select id="getPaymentById" parameterType="Long" resultType="com.yun.cloud9.entities.Payment">
        select * from t_payment where id = #{id}
    </select>
</mapper>